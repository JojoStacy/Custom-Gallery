<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:minHeight="@dimen/size_150"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:contentDescription="@string/image"
                    android:src="@drawable/back" />

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolBar"
                android:background="@color/colorWhite"
                android:visibility="invisible" />

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_flashOn"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_70"
            android:layout_marginRight="@dimen/size_70"
            android:layout_toLeftOf="@+id/iv_capture"
            android:layout_toStartOf="@+id/iv_capture"
            android:alpha="1"
            android:contentDescription="@string/image"
            android:src="@drawable/flash_on" />

        <ImageView
            android:id="@+id/iv_flashOff"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_70"
            android:layout_marginRight="@dimen/size_70"
            android:layout_toLeftOf="@+id/iv_capture"
            android:layout_toStartOf="@+id/iv_capture"
            android:alpha="1"
            android:contentDescription="@string/image"
            android:src="@drawable/flash_off"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_capture"
            android:layout_width="@dimen/size_70"
            android:layout_height="@dimen/size_70"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/size_15"
            android:alpha="1"
            android:contentDescription="@string/image"
            android:src="@drawable/capture_button" />

        <ImageView
            android:id="@+id/iv_switchCamera"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_40"
            android:layout_marginLeft="@dimen/size_70"
            android:layout_marginStart="@dimen/size_70"
            android:layout_toEndOf="@+id/iv_capture"
            android:layout_toRightOf="@+id/iv_capture"
            android:alpha="1"
            android:contentDescription="@string/image"
            android:src="@drawable/switch_camera" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>